{% extends 'base.html.twig' %}

{% block body %}

    <div class="container-fluid" style="width: 100%; height: 100%;">

        <div style="text-align: center">
            <h1>SERVICIO DE ALQUILER DE COCHES</h1>
        </div>

        <div class="wrapper" style="color: white; padding: 2% 30% 10% 30%;">
