                                <div class="form-group">
                                    Modelo: {{ rent.vehicle.name }}
                                </div>

                            </div>
                            <div class="col-md-6 col-xs-12">
                                <div class="form-group">
                                    Apellidos: {{ rent.client.lastname}}
                                </div>
                                <div class="form-group">
                                    Ciudad: {{ rent.city }}
                                </div>
                                <div class="form-group">
                                    Hasta: {{ rent.dateEnd | date("m/d/Y") }}
                                </div>
